<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".Views.FeaturedViewV2.FeaturedMenusAdapter.MenuItemViewHolder">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="14.3dp"
        >

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/menuImageView"
            app:riv_corner_radius="8dp"
            android:layout_width="125dp"
            android:layout_height="173.7dp"
            android:scaleType="centerCrop"
            android:src="@color/colorPrimaryDark"/>

        <TextView
            android:id="@+id/menuPriceText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#373737"
            android:textSize="15.3dp"
            android:text="Rs 350"
            android:layout_marginTop="13.7dp"/>

        <TextView
            android:id="@+id/menuNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#373737"
            android:textSize="12.7dp"
            android:text="Thai Cusine"
            android:layout_marginTop="6.7dp"/>

        <TextView
            android:id="@+id/baseStoreNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vadodara"
            android:textSize="11sp"
            android:textColor="#a5a5a5"
            android:layout_marginTop="2.7dp"/>

    </LinearLayout>

</LinearLayout>