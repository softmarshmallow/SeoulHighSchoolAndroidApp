<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.softmarshmallow.seoulhighschool">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".SeoulHSApplication"
        android:allowBackup="true"
        android:icon="@drawable/shs_logo"
        android:roundIcon="@drawable/shs_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".Views.SplashScreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".Views.MainPage.MainActivity">
        </activity>
        <activity android:name=".Views.MealListHelpers.MealActivity">
        </activity>
        <activity android:name=".Views.SchoolIntoduction.SchoolIntroductionActivity">
        </activity>
        <activity android:name=".Views.DictionarySearch.DictionarySearchActivity">
        </activity>
        <activity android:name=".Views.TimeTableEditor.TimeTableEditorActivity">
        </activity>
        <activity android:name=".Views.RatingCalculator.RatingCalculatorActivity">
        </activity>
        <activity android:name=".Views.MealDetailPage.MealDetailPageActivity">
        </activity>
        <activity android:name=".Views.MealDetailPage.MealReviewCreatorActivity">
        </activity>
    </application>

</manifest>